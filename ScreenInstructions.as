package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	public class ScreenInstructions extends MovieClip	{		public function ScreenInstructions()		{			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}				private function onAddedToStage(e:Event):void		{			// set variables						// add listeners			addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			menu_btn.addEventListener(MouseEvent.CLICK, onMenu);		}				private function onRemovedFromStage(e:Event):void		{			// remove listeners			removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			removeEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			menu_btn.removeEventListener(MouseEvent.CLICK, onMenu);		}				private function onMenu(e:MouseEvent):void		{			var menuScreen:ScreenMenu = new ScreenMenu();			MovieClip(parent).addChild(menuScreen);			MovieClip(parent).removeChild(this);		}	}}