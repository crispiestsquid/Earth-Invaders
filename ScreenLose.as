package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.media.SoundChannel;	public class ScreenLose extends MovieClip	{		private var _soundChannel:SoundChannel;		private var _mouseClick:mouseclick;				public function ScreenLose()		{			// constructor code			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}				private function onAddedToStage(e:Event):void		{			_soundChannel = new SoundChannel();			_mouseClick = new mouseclick();						// event listeners			addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			replay_btn.addEventListener(MouseEvent.CLICK, onReplay);		}				private function onRemovedFromStage(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			removeEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);			replay_btn.removeEventListener(MouseEvent.CLICK, onReplay);		}				private function onReplay(e:MouseEvent):void		{			_soundChannel = _mouseClick.play();			var menu:ScreenMenu = new ScreenMenu();			MovieClip(parent).addChild(menu);			MovieClip(parent).removeChild(this);		}	}}