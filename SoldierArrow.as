package {	// import flash assets	import flash.display.MovieClip;	import flash.events.Event;	// define class	public class SoldierArrow extends MovieClip	{		// create variables		private var _vx:Number;		private var _vy:Number;		private var _stageHeight:Number;		// define constructor		public function SoldierArrow(vx:Number, vy:Number, startX:Number, startY:Number):void		{			// set default properties			x = startX;			y = startY;			_vx = vx;			_vy = vy;			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}		// define onAddedToStage handler		private function onAddedToStage(e:Event):void		{			_stageHeight:stage.stageHeight;			// add listeners			addEventListener(Event.ENTER_FRAME, Update);			addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);		}		// define onRemovedFromStage handler		private function onRemovedFromStage(e:Event):void		{			// remove listeners			removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			removeEventListener(Event.ENTER_FRAME, Update);			removeEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);		}		private function Update(e:Event):void		{			if (this != null)			{				// move the EnemyArrow				x +=  _vx;				y +=  _vy;				if (MovieClip(parent) != null)				{					// check for collision with enemies;					MovieClip(parent).checkCollisionWithPlayer(this);					// check for collision with blocks;					MovieClip(parent).checkCollisionWithBlocks(this);					if (this != null)					{						// see if the EnemyArrow is off the top of the stage;						if (y + height / 2 > _stageHeight)						{							MovieClip(parent).removeChild(this);						}					}				}			}		}	}}